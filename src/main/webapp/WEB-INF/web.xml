<web-app version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <display-name>JPA01</display-name>

    <filter>
        <filter-name>database</filter-name>
        <filter-class>org.justgive.filters.DatabaseFilter</filter-class>
    </filter>

    <filter>
        <filter-name>sessionFilter</filter-name>
        <filter-class>org.justgive.filters.SessionFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>database</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>sessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.justgive.controllers.ActionController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>path</servlet-name>
        <servlet-class>org.justgive.controllers.PathController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/static/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>/basket</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>path</servlet-name>
        <url-pattern>/simple/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>path</servlet-name>
        <url-pattern>/charity/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>path</servlet-name>
        <url-pattern>/donor/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>path</servlet-name>
        <url-pattern>/session/*</url-pattern>
    </servlet-mapping>

    <!-- default index page -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>